gcloud compute instances create boonchu-cluster-1 \
  --can-ip-forward \
  --image-family  ubuntu-1810 \
  --image-project ubuntu-os-cloud \
  --machine-type n1-standard-4 \
  --metadata kubernetes-version=1.11.2 \
  --scopes cloud-platform,logging-write 

# options:
#  --image-family ubuntu-1404-lts  ubuntu-1604-lts ubuntu-1804-lts ubuntu-1810 \
#  --metadata-from-file startup-script=startup.sh \
#  --tags kubeadm-single-node-cluster \
#  --metadata kubernetes-version=1.11.2-gke.18 

gcloud compute firewall-rules create default-allow-kubeadm-single-node-cluster \
  --allow tcp:6443 \
  --target-tags kubeadm-single-node-cluster \
  --source-ranges 0.0.0.0/0
