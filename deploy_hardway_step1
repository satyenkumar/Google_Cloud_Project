gcloud compute networks create boonchu-cluster-1 --subnet-mode custom

gcloud compute networks subnets create kubernetes \
 --network boonchu-cluster-1   --range 10.240.0.0/24

gcloud compute firewall-rules create boonchu-cluster-1-allow-internal   --allow tcp,udp,icmp \
 --network boonchu-cluster-1   --source-ranges 10.240.0.0/24,10.200.0.0/16

gcloud compute firewall-rules create boonchu-cluster-1-allow-external \
 --allow tcp:22,tcp:6443,icmp \
 --network boonchu-cluster-1 \
 --source-ranges 0.0.0.0/0

gcloud compute firewall-rules list --filter="network:boonchu-cluster-1"

gcloud compute addresses create boonchu-cluster-1 --region $(gcloud config get-value compute/region)
gcloud compute addresses list --filter="name=('boonchu-cluster-1')"

for i in 0 1 2; do
  gcloud compute instances create controller-${i} \
    --async \
    --boot-disk-size 200GB \
    --can-ip-forward \
    --image-family ubuntu-1804-lts \
    --image-project ubuntu-os-cloud \
    --machine-type n1-standard-1 \
    --private-network-ip 10.240.0.1${i} \
    --scopes compute-rw,storage-ro,service-management,service-control,logging-write,monitoring \
    --subnet kubernetes \
    --tags kubernetes-the-hard-way,controller
done

for i in 0 1 2; do
  gcloud compute instances create worker-${i} \
    --async \
    --boot-disk-size 200GB \
    --can-ip-forward \
    --image-family ubuntu-1804-lts \
    --image-project ubuntu-os-cloud \
    --machine-type n1-standard-1 \
    --metadata pod-cidr=10.200.${i}.0/24 \
    --private-network-ip 10.240.0.2${i} \
    --scopes compute-rw,storage-ro,service-management,service-control,logging-write,monitoring \
    --subnet kubernetes \
    --tags kubernetes-the-hard-way,worker
done

